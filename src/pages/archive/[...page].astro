---
import type { GetStaticPaths } from 'astro';
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';
import SiteHeader from '../../components/SiteHeader.astro';
import SiteFooter from '../../components/SiteFooter.astro';
import ReaderShell from '../../components/ReaderShell.astro';

export const getStaticPaths = (async ({ paginate }) => {
  const allPosts = await getCollection('blog', ({ data }) => !data.draft);
  const sortedPosts = allPosts.sort((a, b) =>
    new Date(b.data.pubDate).valueOf() - new Date(a.data.pubDate).valueOf()
  );
  return paginate(sortedPosts, { pageSize: 20 });
}) satisfies GetStaticPaths;

const { page } = Astro.props;
---

<Layout title={`Archive${page.currentPage > 1 ? ` - Page ${page.currentPage}` : ''} - Hologram Thoughts`}>
  <SiteHeader activePage="archive" />

  <main>
    <ReaderShell>
      <h1 class="page-title">Archive</h1>
      <p class="page-description">{page.total} posts</p>

      <div class="posts-list">
        {page.data.map(post => (
          <article class="post-item">
            <a href={`/blog/${post.slug}`} class="post-title">
              {post.data.title}
            </a>
            <div class="post-meta">
              <time class="post-date" datetime={post.data.pubDate.toISOString()}>
                {post.data.pubDate.toLocaleDateString('en-US', {
                  year: 'numeric',
                  month: 'long',
                  day: 'numeric'
                })}
              </time>
              {post.data.categories.length > 0 && (
                <>
                  <span class="meta-sep">&middot;</span>
                  <span class="post-categories">
                    {post.data.categories.join(', ')}
                  </span>
                </>
              )}
            </div>
          </article>
        ))}
      </div>

      <nav class="pagination">
        {page.url.prev ? (
          <a href={page.url.prev} class="page-link">&larr; Newer</a>
        ) : <span />}
        <span class="page-info">Page {page.currentPage} of {page.lastPage}</span>
        {page.url.next ? (
          <a href={page.url.next} class="page-link">Older &rarr;</a>
        ) : <span />}
      </nav>
    </ReaderShell>
  </main>
  <SiteFooter />
</Layout>

<style>
  main {
    padding: 2rem 1rem;
  }

  .page-title {
    font-family: 'Cormorant SC', 'Cormorant Garamond', serif;
    font-size: 2.2rem;
    color: var(--ink);
    font-weight: 600;
    letter-spacing: 0.02em;
    margin-bottom: 0.5rem;
  }

  .page-description {
    color: var(--ink-faint);
    font-size: 0.95rem;
    margin-bottom: 3rem;
  }

  .posts-list {
    display: flex;
    flex-direction: column;
    gap: 1.75rem;
  }

  .post-item {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
  }

  .post-title {
    font-family: 'Cormorant Garamond', serif;
    font-size: 1.4rem;
    font-weight: 600;
    color: var(--ink);
    text-decoration: none;
    line-height: 1.3;
    letter-spacing: 0.01em;
  }

  .post-title:hover {
    color: var(--accent);
  }

  .post-meta {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    align-items: center;
    font-size: 0.875rem;
  }

  .post-date {
    color: var(--ink-faint);
  }

  .meta-sep {
    color: var(--ink-faint);
    opacity: 0.5;
  }

  .post-categories {
    color: var(--ink-faint);
  }

  .pagination {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-top: 3rem;
    padding-top: 2rem;
    border-top: 1px solid var(--border);
  }

  .page-link {
    color: var(--accent);
    text-decoration: none;
    font-size: 0.95rem;
    font-family: 'Cormorant SC', 'Cormorant Garamond', serif;
    letter-spacing: 0.03em;
  }

  .page-link:hover {
    text-decoration: underline;
  }

  .page-info {
    color: var(--ink-faint);
    font-size: 0.9rem;
  }

  @media (max-width: 768px) {
    .page-title {
      font-size: 1.8rem;
    }

    .post-meta {
      flex-direction: column;
      align-items: flex-start;
    }

    .meta-sep {
      display: none;
    }
  }
</style>
