---
import type { GetStaticPaths } from 'astro';
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';
import SiteHeader from '../../components/SiteHeader.astro';
import SiteFooter from '../../components/SiteFooter.astro';

export const getStaticPaths = (async ({ paginate }) => {
  const allPosts = await getCollection('blog', ({ data }) => !data.draft);
  const sortedPosts = allPosts.sort((a, b) =>
    new Date(b.data.pubDate).valueOf() - new Date(a.data.pubDate).valueOf()
  );
  return paginate(sortedPosts, { pageSize: 20 });
}) satisfies GetStaticPaths;

const { page } = Astro.props;
---

<Layout title={`Archive${page.currentPage > 1 ? ` - Page ${page.currentPage}` : ''} - Hologram Thoughts`}>
  <main>
    <SiteHeader activePage="archive" />

    <h1 class="page-title">Archive</h1>
    <p class="page-description">{page.total} posts</p>

    <div class="posts-list">
      {page.data.map(post => (
        <article class="post-item">
          <a href={`/blog/${post.slug}`} class="post-title">
            {post.data.title}
          </a>
          <div class="post-meta">
            <time class="post-date" datetime={post.data.pubDate.toISOString()}>
              {post.data.pubDate.toLocaleDateString('en-US', {
                year: 'numeric',
                month: 'long',
                day: 'numeric'
              })}
            </time>
            {post.data.categories.length > 0 && (
              <>
                <span class="meta-sep">&middot;</span>
                <span class="post-categories">
                  {post.data.categories.join(', ')}
                </span>
              </>
            )}
          </div>
        </article>
      ))}
    </div>

    <nav class="pagination">
      {page.url.prev ? (
        <a href={page.url.prev} class="page-link">&larr; Newer</a>
      ) : <span />}
      <span class="page-info">Page {page.currentPage} of {page.lastPage}</span>
      {page.url.next ? (
        <a href={page.url.next} class="page-link">Older &rarr;</a>
      ) : <span />}
    </nav>
  </main>
  <SiteFooter />
</Layout>

<style>
  main {
    max-width: 800px;
    margin: 0 auto;
    padding: 2rem 1rem;
  }

  .page-title {
    font-family: 'Crimson Text', serif;
    font-size: 2.2rem;
    color: #1c1917;
    font-weight: 600;
    letter-spacing: -0.02em;
    margin-bottom: 0.5rem;
  }

  .page-description {
    color: #78716c;
    font-size: 0.95rem;
    margin-bottom: 3rem;
  }

  .posts-list {
    display: flex;
    flex-direction: column;
    gap: 1.75rem;
  }

  .post-item {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
  }

  .post-title {
    font-family: 'Crimson Text', serif;
    font-size: 1.4rem;
    font-weight: 600;
    color: #1c1917;
    text-decoration: none;
    line-height: 1.3;
    letter-spacing: -0.01em;
  }

  .post-title:hover {
    color: #8b7355;
  }

  .post-meta {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    align-items: center;
    font-size: 0.875rem;
  }

  .post-date {
    color: #78716c;
  }

  .meta-sep {
    color: #a8a29e;
  }

  .post-categories {
    color: #78716c;
  }

  .pagination {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-top: 3rem;
    padding-top: 2rem;
    border-top: 1px solid #d6d3d1;
  }

  .page-link {
    color: #8b7355;
    text-decoration: none;
    font-size: 0.95rem;
  }

  .page-link:hover {
    text-decoration: underline;
  }

  .page-info {
    color: #78716c;
    font-size: 0.9rem;
  }

  @media (max-width: 768px) {
    .page-title {
      font-size: 1.8rem;
    }

    .post-meta {
      flex-direction: column;
      align-items: flex-start;
    }

    .meta-sep {
      display: none;
    }
  }
</style>
