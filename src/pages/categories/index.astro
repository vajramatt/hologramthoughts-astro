---
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';
import SiteHeader from '../../components/SiteHeader.astro';
import SiteFooter from '../../components/SiteFooter.astro';
import ReaderShell from '../../components/ReaderShell.astro';

const allPosts = await getCollection('blog', ({ data }) => !data.draft);

const categories = [
  {
    name: 'Dharma Writings',
    description: 'Explorations of Buddhist teachings, philosophy, and the path',
    slug: 'dharma-writings'
  },
  {
    name: 'Creative Writing',
    description: 'Fiction, poetry, and imaginative works',
    slug: 'creative-writing'
  },
  {
    name: 'Consciousness & Philosophy',
    description: 'Reflections on mind, reality, and the nature of existence',
    slug: 'consciousness-philosophy'
  },
  {
    name: 'Practice & Inner Life',
    description: 'Meditation, dreams, and spiritual practices',
    slug: 'practice-inner-life'
  },
  {
    name: 'Other',
    description: 'Various topics and musings',
    slug: 'other'
  }
];

const categoryCounts = {};
allPosts.forEach(post => {
  post.data.categories.forEach(category => {
    categoryCounts[category] = (categoryCounts[category] || 0) + 1;
  });
});

const categoriesWithCounts = categories.map(cat => ({
  ...cat,
  count: categoryCounts[cat.name] || 0
}));
---

<Layout title="Categories - Hologram Thoughts">
  <SiteHeader activePage="categories" />

  <main>
    <ReaderShell>
      <h1 class="page-title">Categories</h1>

      <div class="categories-list">
        {categoriesWithCounts.map(category => (
          <a href={`/categories/${category.slug}`} class="category-item">
            <div class="category-info">
              <span class="category-name">{category.name}</span>
              <span class="category-description">{category.description}</span>
            </div>
            <span class="category-count">{category.count} posts</span>
          </a>
        ))}
      </div>
    </ReaderShell>
  </main>
  <SiteFooter />
</Layout>

<style>
  main {
    padding: 2rem 1rem;
  }

  .page-title {
    font-family: 'Cormorant SC', 'Cormorant Garamond', serif;
    font-size: 2.2rem;
    color: var(--ink);
    font-weight: 600;
    letter-spacing: 0.02em;
    margin-bottom: 2.5rem;
  }

  .categories-list {
    display: flex;
    flex-direction: column;
  }

  .category-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1.5rem 0;
    border-top: 1px solid var(--border);
    text-decoration: none;
    transition: border-color 0.2s ease;
    gap: 2rem;
  }

  .category-item:last-child {
    border-bottom: 1px solid var(--border);
  }

  .category-item:hover {
    border-top-color: var(--accent);
  }

  .category-info {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
  }

  .category-name {
    font-family: 'Cormorant SC', 'Cormorant Garamond', serif;
    font-size: 1.15rem;
    font-weight: 600;
    color: var(--ink);
    letter-spacing: 0.02em;
  }

  .category-description {
    color: var(--ink-faint);
    font-size: 0.95rem;
    font-style: italic;
    font-family: 'IM Fell DW Pica', 'Georgia', serif;
    line-height: 1.5;
  }

  .category-count {
    color: var(--ink-faint);
    font-size: 0.875rem;
    white-space: nowrap;
  }

  @media (max-width: 768px) {
    .category-item {
      flex-direction: column;
      align-items: flex-start;
      gap: 0.5rem;
    }
  }
</style>
