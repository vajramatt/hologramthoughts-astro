---
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';
import SiteHeader from '../../components/SiteHeader.astro';
import SiteFooter from '../../components/SiteFooter.astro';
import ReaderShell from '../../components/ReaderShell.astro';

export async function getStaticPaths() {
  const allPosts = await getCollection('blog', ({ data }) => !data.draft);

  const categories = [
    { name: 'Dharma Writings', slug: 'dharma-writings' },
    { name: 'Creative Writing', slug: 'creative-writing' },
    { name: 'Consciousness & Philosophy', slug: 'consciousness-philosophy' },
    { name: 'Practice & Inner Life', slug: 'practice-inner-life' },
    { name: 'Other', slug: 'other' }
  ];

  return categories.map(category => {
    const categoryPosts = allPosts.filter(post =>
      post.data.categories.includes(category.name)
    );

    const sortedPosts = categoryPosts.sort((a, b) =>
      new Date(b.data.pubDate).valueOf() - new Date(a.data.pubDate).valueOf()
    );

    return {
      params: { category: category.slug },
      props: {
        categoryName: category.name,
        posts: sortedPosts
      }
    };
  });
}

const { categoryName, posts } = Astro.props;

const descriptions = {
  'Dharma Writings': 'Explorations of Buddhist teachings, philosophy, and the path',
  'Creative Writing': 'Fiction, poetry, and imaginative works',
  'Consciousness & Philosophy': 'Reflections on mind, reality, and the nature of existence',
  'Practice & Inner Life': 'Meditation, dreams, and spiritual practices',
  'Other': 'Various topics and musings'
};
---

<Layout title={`${categoryName} - Hologram Thoughts`}>
  <SiteHeader activePage="categories" />

  <main>
    <ReaderShell>
      <div class="breadcrumb">
        <a href="/categories">Categories</a> <span class="sep">/</span> <span>{categoryName}</span>
      </div>

      <h1 class="page-title">{categoryName}</h1>
      <p class="page-description">{descriptions[categoryName]}</p>
      <p class="post-count">{posts.length} posts</p>

      <div class="posts-list">
        {posts.map(post => (
          <article class="post-item">
            <a href={`/blog/${post.slug}`} class="post-title">
              {post.data.title}
            </a>
            <time class="post-date" datetime={post.data.pubDate}>
              {new Date(post.data.pubDate).toLocaleDateString('en-US', {
                year: 'numeric',
                month: 'long',
                day: 'numeric'
              })}
            </time>
          </article>
        ))}
      </div>
    </ReaderShell>
  </main>
  <SiteFooter />
</Layout>

<style>
  main {
    padding: 2rem 1rem;
  }

  .breadcrumb {
    margin-bottom: 2rem;
    color: var(--ink-faint);
    font-size: 0.9rem;
  }

  .breadcrumb a {
    color: var(--accent);
    text-decoration: none;
  }

  .breadcrumb a:hover {
    text-decoration: underline;
  }

  .breadcrumb .sep {
    margin: 0 0.35rem;
    color: var(--ink-faint);
    opacity: 0.5;
  }

  .page-title {
    font-family: 'Cormorant SC', 'Cormorant Garamond', serif;
    font-size: 2.2rem;
    color: var(--ink);
    font-weight: 600;
    letter-spacing: 0.02em;
    margin-bottom: 0.5rem;
  }

  .page-description {
    color: var(--ink-faint);
    font-size: 1.05rem;
    font-style: italic;
    font-family: 'IM Fell DW Pica', 'Georgia', serif;
    margin-bottom: 0.5rem;
  }

  .post-count {
    color: var(--ink-faint);
    font-size: 0.9rem;
    margin-bottom: 2.5rem;
  }

  .posts-list {
    display: flex;
    flex-direction: column;
    gap: 1.75rem;
  }

  .post-item {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
  }

  .post-title {
    font-family: 'Cormorant Garamond', serif;
    font-size: 1.4rem;
    font-weight: 600;
    color: var(--ink);
    text-decoration: none;
    line-height: 1.3;
    letter-spacing: 0.01em;
  }

  .post-title:hover {
    color: var(--accent);
  }

  .post-date {
    color: var(--ink-faint);
    font-size: 0.875rem;
  }

  @media (max-width: 768px) {
    .page-title {
      font-size: 1.8rem;
    }
  }
</style>
