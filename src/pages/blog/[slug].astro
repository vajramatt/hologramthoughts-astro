---
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';
import SiteHeader from '../../components/SiteHeader.astro';
import SiteFooter from '../../components/SiteFooter.astro';
import TableOfContents from '../../components/TableOfContents.astro';

export async function getStaticPaths() {
  const posts = await getCollection('blog');
  // Sort posts by date (newest first) to get proper order
  const sortedPosts = posts.sort((a, b) => 
    new Date(b.data.pubDate).valueOf() - new Date(a.data.pubDate).valueOf()
  );
  
  return sortedPosts.map((post, index) => {
    // Find previous and next posts in chronological order
    const nextPost = index > 0 ? sortedPosts[index - 1] : null; // newer post
    const prevPost = index < sortedPosts.length - 1 ? sortedPosts[index + 1] : null; // older post
    
    return {
      params: { slug: post.slug },
      props: { 
        post,
        nextPost,
        prevPost
      },
    };
  });
}

const { post, nextPost, prevPost } = Astro.props;
const { Content, remarkPluginFrontmatter, headings } = await post.render();
---

<Layout title={`${post.data.title} - Hologram Thoughts`}>
  <main>
    <SiteHeader activePage="home" />
    
    <article class="post">
      <header class="post-header">
        <h1>{post.data.title}</h1>
        <div class="post-meta">
          <time datetime={post.data.pubDate?.toISOString()}>
            {post.data.pubDate?.toLocaleDateString('en-US', {
              year: 'numeric',
              month: 'long', 
              day: 'numeric'
            })}
          </time>
          
          <span class="reading-time">
            {remarkPluginFrontmatter.readingTime} min read
          </span>
          
          {post.data.categories && (
            <div class="categories">
              {post.data.categories.map((category) => (
                <span class="category">{category}</span>
              ))}
            </div>
          )}
        </div>
      </header>

      <TableOfContents headings={headings} />

      <div class="post-content">
        <Content />
      </div>
    </article>

    {(prevPost || nextPost) && (
      <nav class="post-navigation">
        {prevPost && (
          <a href={`/blog/${prevPost.slug}`} class="nav-link prev">
            <span class="nav-direction">← Previous</span>
            <span class="nav-title">{prevPost.data.title}</span>
          </a>
        )}
        
        {nextPost && (
          <a href={`/blog/${nextPost.slug}`} class="nav-link next">
            <span class="nav-direction">Next →</span>
            <span class="nav-title">{nextPost.data.title}</span>
          </a>
        )}
      </nav>
    )}
  </main>
  
  <SiteFooter />
</Layout>

<style>
  main {
    max-width: 800px;
    margin: 0 auto;
    padding: 2rem 1rem;
  }

  .post {
    background: white;
    border-radius: 1rem;
    overflow: hidden;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.05);
  }

  .post-header {
    padding: 3rem 3rem 2rem;
    border-bottom: 1px solid #f1f5f9;
  }

  .post-header h1 {
    font-family: 'Crimson Text', serif;
    font-size: 3rem;
    line-height: 1.2;
    color: #1a202c;
    margin: 0 0 2rem 0;
    font-weight: 600;
    letter-spacing: -0.02em;
  }

  .post-meta {
    display: flex;
    flex-wrap: wrap;
    gap: 1.5rem;
    align-items: center;
    color: #666;
  }

  .post-meta time {
    font-size: 1.1rem;
    font-weight: 500;
  }

  .reading-time {
    font-size: 1rem;
    color: #667eea;
    font-weight: 500;
    padding: 0.25rem 0.75rem;
    background: #f0f4ff;
    border-radius: 1rem;
    border: 1px solid #e0e7ff;
  }

  .categories {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .category {
    background: #f7fafc;
    color: #4a5568;
    padding: 0.4rem 0.8rem;
    border-radius: 0.5rem;
    font-size: 0.85rem;
    border: 1px solid #e2e8f0;
  }

  .post-content {
    padding: 2rem 3rem 3rem;
    font-size: 1.125rem;
    line-height: 1.8;
    color: #4a5568;
    
    /* Enhanced typography */
    text-rendering: optimizeLegibility;
    font-feature-settings: "kern" 1, "liga" 1, "calt" 1, "pnum" 1, "tnum" 0, "onum" 1, "lnum" 0, "dlig" 0;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
    font-variant-numeric: oldstyle-nums proportional-nums;
    hyphens: auto;
    word-spacing: 0.1em;
  }

  .post-content :global(h1),
  .post-content :global(h2),
  .post-content :global(h3),
  .post-content :global(h4),
  .post-content :global(h5),
  .post-content :global(h6) {
    font-family: 'Crimson Text', serif;
    color: #1a202c;
    font-weight: 600;
    letter-spacing: -0.02em;
    margin-top: 2.5rem;
    margin-bottom: 1.5rem;
    line-height: 1.3;
    position: relative;
  }

  .post-content :global(.heading-link) {
    position: absolute;
    left: -1.5rem;
    top: 50%;
    transform: translateY(-50%);
    color: #667eea;
    text-decoration: none;
    opacity: 0;
    transition: opacity 0.2s ease;
    font-size: 0.8em;
    font-weight: 400;
  }

  .post-content :global(h1:hover .heading-link),
  .post-content :global(h2:hover .heading-link),
  .post-content :global(h3:hover .heading-link),
  .post-content :global(h4:hover .heading-link),
  .post-content :global(h5:hover .heading-link),
  .post-content :global(h6:hover .heading-link) {
    opacity: 1;
  }

  .post-content :global(.heading-link:hover) {
    color: #5a67d8;
  }

  .post-content :global(h1) { font-size: 2.5rem; }
  .post-content :global(h2) { font-size: 2rem; }
  .post-content :global(h3) { font-size: 1.5rem; }
  .post-content :global(h4) { font-size: 1.25rem; }

  .post-content :global(p) {
    margin-bottom: 1.75rem;
    line-height: 1.8;
    orphans: 3;
    widows: 3;
    text-align: justify;
    text-justify: inter-word;
  }

  .post-content :global(p:first-of-type) {
    font-size: 1.2em;
    font-weight: 400;
    color: #2d3748;
    margin-bottom: 2rem;
  }

  .post-content :global(p:first-of-type::first-line) {
    font-variant: small-caps;
    font-weight: 500;
    letter-spacing: 0.05em;
  }

  .post-content :global(blockquote) {
    border-left: 4px solid #667eea;
    padding-left: 2rem;
    margin: 3rem 0;
    font-style: italic;
    color: #2d3748;
    font-size: 1.2rem;
    line-height: 1.7;
    position: relative;
    quotes: """ """ "'" "'";
  }

  .post-content :global(blockquote::before) {
    content: open-quote;
    font-size: 4rem;
    color: #667eea;
    position: absolute;
    left: -1rem;
    top: -0.5rem;
    font-family: 'Crimson Text', serif;
    opacity: 0.3;
  }

  .post-content :global(blockquote p) {
    text-align: left;
    margin-bottom: 1rem;
  }

  .post-content :global(blockquote p:last-child) {
    margin-bottom: 0;
  }

  .post-content :global(em) {
    font-style: italic;
    color: #2d3748;
  }

  .post-content :global(strong) {
    font-weight: 600;
    color: #1a202c;
  }

  .post-content :global(code) {
    background: #f7fafc;
    padding: 0.2rem 0.4rem;
    border-radius: 0.25rem;
    font-size: 0.9em;
    color: #d53f8c;
  }

  .post-content :global(ul),
  .post-content :global(ol) {
    margin: 1.5rem 0;
    padding-left: 2rem;
  }

  .post-content :global(li) {
    margin-bottom: 0.75rem;
    line-height: 1.7;
  }

  .post-content :global(li::marker) {
    color: #667eea;
    font-weight: 600;
  }

  .post-content :global(hr) {
    border: none;
    height: 1px;
    background: linear-gradient(to right, transparent, #667eea, transparent);
    margin: 3rem 0;
    opacity: 0.5;
  }

  .post-content :global(sup) {
    font-size: 0.75em;
    line-height: 1;
    font-feature-settings: "sups" 1;
  }

  .post-content :global(sub) {
    font-size: 0.75em;
    line-height: 1;
    font-feature-settings: "subs" 1;
  }

  .post-navigation {
    display: flex;
    justify-content: space-between;
    align-items: stretch;
    gap: 2rem;
    margin-top: 3rem;
    padding: 2rem 0;
  }

  .nav-link {
    display: flex;
    flex-direction: column;
    padding: 1.5rem 2rem;
    background: white;
    border: 1px solid #e2e8f0;
    border-radius: 1rem;
    text-decoration: none;
    transition: all 0.3s ease;
    flex: 1;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
  }

  .nav-link:hover {
    border-color: #667eea;
    box-shadow: 0 4px 16px rgba(102, 126, 234, 0.15);
    transform: translateY(-2px);
  }

  .nav-link.prev {
    text-align: left;
  }

  .nav-link.next {
    text-align: right;
  }

  .nav-direction {
    font-size: 0.9rem;
    color: #667eea;
    font-weight: 600;
    margin-bottom: 0.5rem;
    font-family: 'Inter', system-ui, sans-serif;
  }

  .nav-title {
    font-size: 1.1rem;
    color: #1a202c;
    font-weight: 500;
    font-family: 'Crimson Text', serif;
    line-height: 1.4;
  }

  @media (max-width: 768px) {
    main {
      padding: 1rem;
    }

    .post-header {
      padding: 2rem 1.5rem 1.5rem;
    }

    .post-header h1 {
      font-size: 2rem;
    }

    .post-content {
      padding: 1.5rem;
    }

    .post-meta {
      flex-direction: column;
      align-items: flex-start;
      gap: 1rem;
    }

    .post-navigation {
      flex-direction: column;
      gap: 1rem;
    }
  }
</style>
