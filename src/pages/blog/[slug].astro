---
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';
import SiteHeader from '../../components/SiteHeader.astro';
import SiteFooter from '../../components/SiteFooter.astro';
import TableOfContents from '../../components/TableOfContents.astro';

export async function getStaticPaths() {
  const posts = await getCollection('blog', ({ data }) => !data.draft);
  const sortedPosts = posts.sort((a, b) =>
    new Date(b.data.pubDate).valueOf() - new Date(a.data.pubDate).valueOf()
  );

  return sortedPosts.map((post, index) => {
    const nextPost = index > 0 ? sortedPosts[index - 1] : null;
    const prevPost = index < sortedPosts.length - 1 ? sortedPosts[index + 1] : null;

    return {
      params: { slug: post.slug },
      props: { post, nextPost, prevPost },
    };
  });
}

const { post, nextPost, prevPost } = Astro.props;
const { Content, remarkPluginFrontmatter, headings } = await post.render();
---

<Layout title={`${post.data.title} - Hologram Thoughts`}>
  <main>
    <SiteHeader activePage="home" />

    <article class="post">
      <header class="post-header">
        <h1>{post.data.title}</h1>
        <div class="post-meta">
          <time datetime={post.data.pubDate?.toISOString()}>
            {post.data.pubDate?.toLocaleDateString('en-US', {
              year: 'numeric',
              month: 'long',
              day: 'numeric'
            })}
          </time>
          <span class="meta-sep">&middot;</span>
          <span class="reading-time">
            {remarkPluginFrontmatter.readingTime} min read
          </span>
          {post.data.categories && post.data.categories.length > 0 && (
            <>
              <span class="meta-sep">&middot;</span>
              <span class="categories">
                {post.data.categories.join(', ')}
              </span>
            </>
          )}
        </div>
      </header>

      <TableOfContents headings={headings} />

      <div class="post-content">
        <Content />
      </div>
    </article>

    {(prevPost || nextPost) && (
      <nav class="post-navigation">
        {prevPost ? (
          <a href={`/blog/${prevPost.slug}`} class="nav-link prev">
            <span class="nav-direction">&larr; Older</span>
            <span class="nav-title">{prevPost.data.title}</span>
          </a>
        ) : <span />}

        {nextPost ? (
          <a href={`/blog/${nextPost.slug}`} class="nav-link next">
            <span class="nav-direction">Newer &rarr;</span>
            <span class="nav-title">{nextPost.data.title}</span>
          </a>
        ) : <span />}
      </nav>
    )}
  </main>

  <SiteFooter />
</Layout>

<style>
  main {
    max-width: 800px;
    margin: 0 auto;
    padding: 2rem 1rem;
  }

  .post-header {
    margin-bottom: 2.5rem;
    padding-bottom: 2rem;
    border-bottom: 1px solid #d6d3d1;
  }

  .post-header h1 {
    font-family: 'Crimson Text', serif;
    font-size: 2.8rem;
    line-height: 1.15;
    color: #1c1917;
    margin: 0 0 1.25rem 0;
    font-weight: 600;
    letter-spacing: -0.02em;
  }

  .post-meta {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    align-items: center;
    color: #78716c;
    font-size: 0.95rem;
  }

  .meta-sep {
    color: #a8a29e;
  }

  .reading-time {
    color: #78716c;
  }

  .categories {
    color: #78716c;
  }

  .post-content {
    font-size: 1.125rem;
    line-height: 1.85;
    color: #44403c;
    text-rendering: optimizeLegibility;
    font-feature-settings: "kern" 1, "liga" 1, "calt" 1;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
  }

  .post-content :global(h1),
  .post-content :global(h2),
  .post-content :global(h3),
  .post-content :global(h4),
  .post-content :global(h5),
  .post-content :global(h6) {
    font-family: 'Crimson Text', serif;
    color: #1c1917;
    font-weight: 600;
    letter-spacing: -0.02em;
    margin-top: 2.5rem;
    margin-bottom: 1rem;
    line-height: 1.3;
    position: relative;
  }

  .post-content :global(.heading-link) {
    position: absolute;
    left: -1.5rem;
    top: 50%;
    transform: translateY(-50%);
    color: #8b7355;
    text-decoration: none;
    opacity: 0;
    transition: opacity 0.2s ease;
    font-size: 0.8em;
    font-weight: 400;
  }

  .post-content :global(h1:hover .heading-link),
  .post-content :global(h2:hover .heading-link),
  .post-content :global(h3:hover .heading-link),
  .post-content :global(h4:hover .heading-link),
  .post-content :global(h5:hover .heading-link),
  .post-content :global(h6:hover .heading-link) {
    opacity: 1;
  }

  .post-content :global(h1) { font-size: 2.2rem; }
  .post-content :global(h2) { font-size: 1.8rem; }
  .post-content :global(h3) { font-size: 1.4rem; }
  .post-content :global(h4) { font-size: 1.2rem; }

  .post-content :global(p) {
    margin-bottom: 1.5rem;
    line-height: 1.85;
    orphans: 3;
    widows: 3;
  }

  .post-content :global(p:first-of-type) {
    font-size: 1.15em;
    color: #292524;
  }

  .post-content :global(blockquote) {
    border-left: 2px solid #8b7355;
    padding-left: 1.5rem;
    margin: 2rem 0;
    font-style: italic;
    color: #292524;
    font-size: 1.1rem;
    line-height: 1.7;
  }

  .post-content :global(blockquote p) {
    margin-bottom: 1rem;
  }

  .post-content :global(blockquote p:last-child) {
    margin-bottom: 0;
  }

  .post-content :global(em) {
    font-style: italic;
    color: #292524;
  }

  .post-content :global(strong) {
    font-weight: 600;
    color: #1c1917;
  }

  .post-content :global(code) {
    background: #f5f5f4;
    padding: 0.2rem 0.4rem;
    border-radius: 0.25rem;
    font-size: 0.9em;
    color: #92400e;
  }

  .post-content :global(ul),
  .post-content :global(ol) {
    margin: 1.5rem 0;
    padding-left: 2rem;
  }

  .post-content :global(li) {
    margin-bottom: 0.5rem;
    line-height: 1.7;
  }

  .post-content :global(li::marker) {
    color: #8b7355;
  }

  .post-content :global(hr) {
    border: none;
    height: 1px;
    background: #d6d3d1;
    margin: 3rem 0;
  }

  .post-content :global(sup) {
    font-size: 0.75em;
    line-height: 1;
  }

  .post-content :global(sub) {
    font-size: 0.75em;
    line-height: 1;
  }

  .post-navigation {
    display: flex;
    justify-content: space-between;
    gap: 2rem;
    margin-top: 3rem;
    padding-top: 2rem;
    border-top: 1px solid #d6d3d1;
  }

  .nav-link {
    display: flex;
    flex-direction: column;
    text-decoration: none;
    flex: 1;
    gap: 0.25rem;
  }

  .nav-link.next {
    text-align: right;
  }

  .nav-direction {
    font-size: 0.85rem;
    color: #8b7355;
    font-weight: 500;
  }

  .nav-title {
    font-size: 1rem;
    color: #1c1917;
    font-family: 'Crimson Text', serif;
    line-height: 1.4;
  }

  .nav-link:hover .nav-title {
    color: #8b7355;
  }

  @media (max-width: 768px) {
    main {
      padding: 1rem;
    }

    .post-header h1 {
      font-size: 2rem;
    }

    .post-meta {
      flex-direction: column;
      align-items: flex-start;
    }

    .meta-sep {
      display: none;
    }

    .post-navigation {
      flex-direction: column;
      gap: 1.5rem;
    }

    .nav-link.next {
      text-align: left;
    }
  }
</style>
