---
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';
import SiteHeader from '../../components/SiteHeader.astro';
import SiteFooter from '../../components/SiteFooter.astro';
import ReaderShell from '../../components/ReaderShell.astro';
import ReadingProgress from '../../components/ReadingProgress.astro';
import TableOfContents from '../../components/TableOfContents.astro';

export async function getStaticPaths() {
  const posts = await getCollection('blog', ({ data }) => !data.draft);
  const sortedPosts = posts.sort((a, b) =>
    new Date(b.data.pubDate).valueOf() - new Date(a.data.pubDate).valueOf()
  );

  return sortedPosts.map((post, index) => {
    const nextPost = index > 0 ? sortedPosts[index - 1] : null;
    const prevPost = index < sortedPosts.length - 1 ? sortedPosts[index + 1] : null;

    return {
      params: { slug: post.slug },
      props: { post, nextPost, prevPost },
    };
  });
}

const { post, nextPost, prevPost } = Astro.props;
const { Content, remarkPluginFrontmatter, headings } = await post.render();
---

<Layout title={`${post.data.title} - Hologram Thoughts`}>
  <ReadingProgress />
  <SiteHeader activePage="home" />

  <main>
    <ReaderShell>
      <article class="post">
        <header class="post-header">
          {post.data.categories && post.data.categories.length > 0 && (
            <div class="category-label">
              {post.data.categories.join(' · ')}
            </div>
          )}
          <h1>{post.data.title}</h1>
          <div class="post-meta">
            <time datetime={post.data.pubDate?.toISOString()}>
              {post.data.pubDate?.toLocaleDateString('en-US', {
                year: 'numeric',
                month: 'long',
                day: 'numeric'
              })}
            </time>
            <span class="meta-sep">·</span>
            <span class="reading-time">
              {remarkPluginFrontmatter.readingTime} min read
            </span>
          </div>
        </header>

        <TableOfContents headings={headings} />

        <div class="post-content">
          <Content />
        </div>

        <div class="end-mark">&#10022;</div>
      </article>

      {(prevPost || nextPost) && (
        <nav class="post-navigation">
          {prevPost ? (
            <a href={`/blog/${prevPost.slug}`} class="nav-link prev">
              <span class="nav-direction">&larr; Older</span>
              <span class="nav-title">{prevPost.data.title}</span>
            </a>
          ) : <span />}

          {nextPost ? (
            <a href={`/blog/${nextPost.slug}`} class="nav-link next">
              <span class="nav-direction">Newer &rarr;</span>
              <span class="nav-title">{nextPost.data.title}</span>
            </a>
          ) : <span />}
        </nav>
      )}
    </ReaderShell>
  </main>

  <SiteFooter />
</Layout>

<style>
  main {
    padding: 2rem 1rem;
  }

  /* ─── Header ─── */
  .post-header {
    margin-bottom: 2.5rem;
    padding-bottom: 2rem;
    border-bottom: 1px solid var(--border);
    animation: fadeUp 0.6s ease-out both;
  }

  .category-label {
    font-family: 'Cormorant SC', 'Cormorant Garamond', serif;
    font-size: 0.85rem;
    font-weight: 600;
    letter-spacing: 0.1em;
    color: var(--accent);
    text-transform: uppercase;
    margin-bottom: 0.75rem;
    padding-bottom: 0.75rem;
    border-bottom: 1px solid var(--border);
  }

  .post-header h1 {
    font-family: 'Cormorant SC', 'Cormorant Garamond', serif;
    font-size: 2.8rem;
    line-height: 1.15;
    color: var(--ink);
    margin: 0 0 1.25rem 0;
    font-weight: 600;
    letter-spacing: 0.02em;
  }

  .post-meta {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    align-items: center;
    color: var(--ink-faint);
    font-size: 0.95rem;
  }

  .meta-sep {
    color: var(--ink-faint);
    opacity: 0.5;
  }

  .reading-time {
    color: var(--ink-faint);
  }

  /* ─── Post body ─── */
  .post-content {
    font-family: 'IM Fell DW Pica', 'Georgia', serif;
    font-size: 1.15rem;
    line-height: 1.9;
    color: var(--ink);
    text-rendering: optimizeLegibility;
    font-feature-settings: "kern" 1, "liga" 1, "calt" 1;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
    text-align: justify;
    -webkit-hyphens: auto;
    hyphens: auto;
    animation: fadeUp 0.6s ease-out 0.15s both;
  }

  /* Headings inside content */
  .post-content :global(h1),
  .post-content :global(h2),
  .post-content :global(h3),
  .post-content :global(h4),
  .post-content :global(h5),
  .post-content :global(h6) {
    font-family: 'Cormorant SC', 'Cormorant Garamond', serif;
    color: var(--ink);
    font-weight: 600;
    letter-spacing: 0.02em;
    margin-top: 2.5rem;
    margin-bottom: 1rem;
    line-height: 1.3;
    position: relative;
    text-align: left;
  }

  .post-content :global(.heading-link) {
    position: absolute;
    left: -1.5rem;
    top: 50%;
    transform: translateY(-50%);
    color: var(--accent);
    text-decoration: none;
    opacity: 0;
    transition: opacity 0.2s ease;
    font-size: 0.8em;
    font-weight: 400;
  }

  .post-content :global(h1:hover .heading-link),
  .post-content :global(h2:hover .heading-link),
  .post-content :global(h3:hover .heading-link),
  .post-content :global(h4:hover .heading-link),
  .post-content :global(h5:hover .heading-link),
  .post-content :global(h6:hover .heading-link) {
    opacity: 1;
  }

  .post-content :global(h1) { font-size: 2.2rem; }
  .post-content :global(h2) { font-size: 1.8rem; }
  .post-content :global(h3) { font-size: 1.4rem; }
  .post-content :global(h4) { font-size: 1.2rem; }

  /* Paragraphs */
  .post-content :global(p) {
    margin-bottom: 1.5rem;
    line-height: 1.9;
    orphans: 3;
    widows: 3;
  }

  /* Drop cap on first paragraph */
  .post-content :global(p:first-of-type::first-letter) {
    font-family: 'Cormorant SC', 'Cormorant Garamond', serif;
    float: left;
    font-size: 4.2rem;
    line-height: 0.8;
    padding-right: 0.12em;
    padding-top: 0.08em;
    color: var(--accent);
    font-weight: 600;
  }

  .post-content :global(p:first-of-type) {
    font-size: 1.15em;
    color: var(--ink);
  }

  /* Blockquotes */
  .post-content :global(blockquote) {
    border-left: 2px solid var(--accent);
    padding-left: 1.5rem;
    margin: 2rem 0;
    font-style: italic;
    color: var(--ink);
    font-size: 1.1rem;
    line-height: 1.7;
  }

  .post-content :global(blockquote p) {
    margin-bottom: 1rem;
  }

  .post-content :global(blockquote p:last-child) {
    margin-bottom: 0;
  }

  /* Inline styles */
  .post-content :global(em) {
    font-style: italic;
    color: var(--ink);
  }

  .post-content :global(strong) {
    font-weight: 600;
    color: var(--ink);
  }

  .post-content :global(code) {
    background: var(--code-bg);
    padding: 0.2rem 0.4rem;
    border-radius: 0.25rem;
    font-size: 0.9em;
    color: var(--code-text);
  }

  /* Lists */
  .post-content :global(ul),
  .post-content :global(ol) {
    margin: 1.5rem 0;
    padding-left: 2rem;
  }

  .post-content :global(li) {
    margin-bottom: 0.5rem;
    line-height: 1.7;
  }

  .post-content :global(li::marker) {
    color: var(--accent);
  }

  /* Horizontal rule → ornamental section divider */
  .post-content :global(hr) {
    border: none;
    height: auto;
    background: none;
    margin: 3rem 0;
    text-align: center;
    overflow: visible;
  }

  .post-content :global(hr)::after {
    content: '§';
    display: block;
    font-family: 'Cormorant SC', serif;
    font-size: 1.5rem;
    color: var(--accent);
    opacity: 0.5;
    letter-spacing: 0.5em;
  }

  .post-content :global(sup) {
    font-size: 0.75em;
    line-height: 1;
  }

  .post-content :global(sub) {
    font-size: 0.75em;
    line-height: 1;
  }

  /* Links in content */
  .post-content :global(a) {
    color: var(--accent);
    text-decoration-color: var(--accent-faint);
    text-underline-offset: 2px;
    transition: color 0.2s ease, text-decoration-color 0.2s ease;
  }

  .post-content :global(a:hover) {
    color: var(--accent-light);
    text-decoration-color: var(--accent-light);
  }

  /* ─── End mark ─── */
  .end-mark {
    text-align: center;
    font-size: 1.5rem;
    color: var(--accent);
    opacity: 0.4;
    margin: 3rem 0 2rem;
    letter-spacing: 0.5em;
  }

  /* ─── Navigation ─── */
  .post-navigation {
    display: flex;
    justify-content: space-between;
    gap: 2rem;
    margin-top: 2rem;
    padding-top: 2rem;
    border-top: 1px solid var(--border);
  }

  .nav-link {
    display: flex;
    flex-direction: column;
    text-decoration: none;
    flex: 1;
    gap: 0.25rem;
  }

  .nav-link.next {
    text-align: right;
  }

  .nav-direction {
    font-size: 0.85rem;
    color: var(--accent);
    font-weight: 500;
    font-family: 'Cormorant SC', 'Cormorant Garamond', serif;
    letter-spacing: 0.05em;
  }

  .nav-title {
    font-size: 1rem;
    color: var(--ink);
    font-family: 'Cormorant Garamond', serif;
    line-height: 1.4;
  }

  .nav-link:hover .nav-title {
    color: var(--accent);
  }

  @media (max-width: 768px) {
    main {
      padding: 1rem 0.5rem;
    }

    .post-header h1 {
      font-size: 2rem;
    }

    .post-meta {
      flex-direction: column;
      align-items: flex-start;
    }

    .meta-sep {
      display: none;
    }

    .post-content {
      text-align: left;
      hyphens: none;
      -webkit-hyphens: none;
    }

    .post-navigation {
      flex-direction: column;
      gap: 1.5rem;
    }

    .nav-link.next {
      text-align: left;
    }
  }
</style>
