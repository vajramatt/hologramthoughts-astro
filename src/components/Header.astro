---
interface Props {
  subtitle: string;
}

const { subtitle } = Astro.props;
---

<header class="hero">
  <h1><a href="https://hologramthoughts.com">Hologram Thoughts</a></h1>
  <p class="tagline">Because Ideas Last Forever</p>
  <p class="subtitle">{subtitle}</p>
  <slot />
</header>

<style>
  .hero {
    text-align: center;
    margin-bottom: 4rem;
    padding: 4rem 0;
    background: white;
    border: 3px solid #667eea;
    color: #1a202c;
    border-radius: 1rem;
    margin-bottom: 3rem;
  }

  .hero h1 {
    font-family: 'Crimson Text', serif;
    font-size: 3.5rem;
    margin-bottom: 0.75rem;
    font-weight: 600;
    letter-spacing: -0.02em;
    line-height: 1.2;
    color: #1a202c;
    margin: 0 0 0.75rem 0;
  }

  .hero h1 a {
    color: #1a202c;
    text-decoration: none;
    transition: color 0.2s ease;
  }

  .hero h1 a:hover {
    color: #667eea;
  }

  .tagline {
    font-size: 1.5rem;
    margin-bottom: 1rem;
    opacity: 0.8;
    font-weight: 400;
    line-height: 1.4;
    color: #4a5568;
  }

  .subtitle {
    font-size: 1.1rem;
    opacity: 0.7;
    font-weight: 300;
    line-height: 1.5;
    color: #4a5568;
  }

  @media (max-width: 768px) {
    .hero h1 {
      font-size: 2.5rem;
    }
    
    .tagline {
      font-size: 1.2rem;
    }
  }
</style>
