---
import ThemeToggle from './ThemeToggle.astro';

interface Props {
  activePage: 'home' | 'archive' | 'categories' | 'search';
}

const { activePage } = Astro.props;
---

<header class="site-header">
  <div class="header-bar">
    <a href="/" class="wordmark">Hologram Thoughts</a>
    <div class="header-right">
      <nav class="site-nav">
        <a href="/archive" class:list={['nav-link', { active: activePage === 'archive' }]}>Archive</a>
        <a href="/categories" class:list={['nav-link', { active: activePage === 'categories' }]}>Categories</a>
        <a href="/search" class:list={['nav-link', { active: activePage === 'search' }]}>Search</a>
      </nav>
      <ThemeToggle />
    </div>
  </div>
</header>

<style>
  .site-header {
    position: sticky;
    top: 0;
    z-index: 100;
    background: var(--page);
    border-bottom: 1px solid var(--border);
    transition: background 0.4s ease;
  }

  .header-bar {
    max-width: 64ch;
    margin: 0 auto;
    padding: 0.75rem 1rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .wordmark {
    font-family: 'Cormorant SC', 'Cormorant Garamond', serif;
    font-size: 1.2rem;
    font-weight: 600;
    color: var(--ink);
    text-decoration: none;
    letter-spacing: 0.03em;
    white-space: nowrap;
  }

  .wordmark:hover {
    color: var(--accent);
  }

  .header-right {
    display: flex;
    align-items: center;
    gap: 1.5rem;
  }

  .site-nav {
    display: flex;
    gap: 1.25rem;
  }

  .nav-link {
    color: var(--ink-faint);
    text-decoration: none;
    font-family: 'Cormorant SC', 'Cormorant Garamond', serif;
    font-size: 0.9rem;
    font-weight: 500;
    letter-spacing: 0.03em;
    transition: color 0.2s ease;
  }

  .nav-link:hover {
    color: var(--ink);
  }

  .nav-link.active {
    color: var(--accent);
  }

  @media (max-width: 768px) {
    .header-bar {
      padding: 0.6rem 0.75rem;
    }

    .wordmark {
      font-size: 1rem;
    }

    .site-nav {
      gap: 0.75rem;
    }

    .nav-link {
      font-size: 0.8rem;
    }
  }

  @media (max-width: 480px) {
    .header-bar {
      flex-wrap: wrap;
      gap: 0.5rem;
    }
  }
</style>
