---
interface Props {
  activePage: 'home' | 'archive' | 'categories' | 'search';
}

const { activePage } = Astro.props;
---

<header class="site-header">
  <div class="header-container">
    <div class="header-content">
      <a href="/" class="site-title-link">
        <h1 class="site-title">Hologram Thoughts</h1>
      </a>
      <p class="site-tagline">Because ideas last forever</p>
    </div>

    <nav class="site-nav">
      <a href="/" class:list={['nav-link', { active: activePage === 'home' }]}>Home</a>
      <a href="/archive" class:list={['nav-link', { active: activePage === 'archive' }]}>Archive</a>
      <a href="/categories" class:list={['nav-link', { active: activePage === 'categories' }]}>Categories</a>
      <a href="/search" class:list={['nav-link', { active: activePage === 'search' }]}>Search</a>
    </nav>
  </div>
</header>

<style>
  .site-header {
    padding: 3rem 0 0;
    margin-bottom: 3rem;
    border-bottom: 1px solid #d6d3d1;
  }

  .header-container {
    max-width: 800px;
    margin: 0 auto;
    padding: 0 1rem;
  }

  .header-content {
    margin-bottom: 1.5rem;
  }

  .site-title-link {
    text-decoration: none;
  }

  .site-title {
    font-family: 'Crimson Text', serif;
    font-size: 2.8rem;
    font-weight: 600;
    letter-spacing: -0.03em;
    line-height: 1;
    color: #1c1917;
    margin-bottom: 0.5rem;
  }

  .site-tagline {
    font-family: 'Crimson Text', serif;
    font-size: 1.1rem;
    font-style: italic;
    font-weight: 400;
    line-height: 1.3;
    color: #78716c;
    margin: 0;
  }

  .site-nav {
    display: flex;
    gap: 2rem;
    padding-bottom: 1rem;
  }

  .nav-link {
    color: #78716c;
    text-decoration: none;
    font-size: 0.95rem;
    font-weight: 400;
    padding-bottom: 0.5rem;
    border-bottom: 2px solid transparent;
    transition: color 0.2s ease, border-color 0.2s ease;
  }

  .nav-link:hover {
    color: #1c1917;
  }

  .nav-link.active {
    color: #1c1917;
    border-bottom-color: #8b7355;
  }

  @media (max-width: 768px) {
    .site-title {
      font-size: 2.2rem;
    }

    .site-nav {
      gap: 1.5rem;
    }
  }
</style>
