---
import { getCollection } from 'astro:content';

const allPosts = await getCollection('blog');
const oldestPost = allPosts.reduce((oldest, post) => {
  return !oldest || post.data.pubDate < oldest.data.pubDate ? post : oldest;
}, null);

const startYear = oldestPost ? oldestPost.data.pubDate.getFullYear() : new Date().getFullYear();
const currentYear = new Date().getFullYear();
const yearRange = startYear === currentYear ? currentYear : `${startYear}-${currentYear}`;
---

<footer class="site-footer">
  <div class="footer-content">
    <p>&copy; {yearRange} <a href="https://vajramatt.github.io/" class="author-link">Matthew Williamson</a> â€” Hologram Thoughts</p>
    <nav class="footer-links">
      <a href="/rss.xml">RSS</a>
      <a href="/archive">Archive</a>
      <a href="/search">Search</a>
    </nav>
  </div>
</footer>

<style>
  .site-footer {
    margin-top: 4rem;
    padding: 2rem 1rem;
    border-top: 1px solid var(--border);
  }

  .footer-content {
    max-width: 64ch;
    margin: 0 auto;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .site-footer p {
    margin: 0;
    color: var(--ink-faint);
    font-size: 0.875rem;
  }

  .footer-links {
    display: flex;
    gap: 1.5rem;
  }

  .footer-links a {
    color: var(--ink-faint);
    text-decoration: none;
    font-size: 0.875rem;
    font-family: 'Cormorant SC', 'Cormorant Garamond', serif;
    letter-spacing: 0.03em;
  }

  .footer-links a:hover {
    color: var(--accent);
  }

  .author-link {
    color: var(--ink-faint);
    text-decoration: none;
  }

  .author-link:hover {
    color: var(--accent);
  }

  @media (max-width: 768px) {
    .footer-content {
      flex-direction: column;
      gap: 1rem;
    }

    .site-footer {
      margin-top: 3rem;
      padding: 1.5rem 1rem;
    }
  }
</style>
