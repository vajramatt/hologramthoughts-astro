---
export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en" data-theme="light">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Hologram Thoughts - A spiritual journey exploring Buddhism, meditation, consciousness, and the interconnected nature of reality. Because ideas last forever." />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<link rel="alternate" type="application/rss+xml" title="Hologram Thoughts" href="/rss.xml" />
		<title>{title}</title>

		<!-- Open Graph -->
		<meta property="og:type" content="website" />
		<meta property="og:title" content={title} />
		<meta property="og:description" content="A spiritual journey exploring Buddhism, meditation, consciousness, and the interconnected nature of reality. Because ideas last forever." />
		<meta property="og:image" content="https://hologramthoughts.com/og-image.png" />
		<meta property="og:url" content={Astro.url.href} />
		<meta property="og:site_name" content="Hologram Thoughts" />

		<!-- Twitter Card -->
		<meta name="twitter:card" content="summary_large_image" />
		<meta name="twitter:title" content={title} />
		<meta name="twitter:description" content="A spiritual journey exploring Buddhism, meditation, consciousness, and the interconnected nature of reality." />
		<meta name="twitter:image" content="https://hologramthoughts.com/og-image.png" />

		<!-- Fonts -->
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Cormorant+Garamond:ital,wght@0,300;0,400;0,500;0,600;0,700;1,300;1,400;1,500;1,600;1,700&family=Cormorant+SC:wght@300;400;500;600;700&family=IM+Fell+DW+Pica:ital@0;1&display=swap" rel="stylesheet">

		<!-- Theme detection: prevent FOUC -->
		<script is:inline>
			(function() {
				const saved = localStorage.getItem('theme');
				const prefersDark = window.matchMedia('(prefers-color-scheme: dark)').matches;
				const theme = saved || (prefersDark ? 'dark' : 'light');
				document.documentElement.setAttribute('data-theme', theme);
			})();
		</script>
	</head>
	<body>
		<slot />
	</body>
</html>

<style is:global>
	/* ═══════════════════════════════════════════════════════
	   DESIGN TOKENS — Light & Dark
	   ═══════════════════════════════════════════════════════ */
	html[data-theme="light"] {
		--ink:          #2a1f12;
		--ink-light:    #5c4f3a;
		--ink-faint:    #8a7d6b;
		--page:         #f5ecd8;
		--page-dark:    #e8d9bf;
		--shell:        #e8d9bf;
		--shell-shadow: rgba(0,0,0,0.15);
		--accent:       #7a3b1e;
		--accent-light: #a0522d;
		--accent-faint: rgba(122,59,30,0.12);
		--border:       rgba(42,31,18,0.12);
		--border-strong: rgba(42,31,18,0.25);
		--grain-opacity: 0.04;
		--vignette-opacity: 0.3;
		--code-bg:      rgba(42,31,18,0.06);
		--code-text:    #7a3b1e;
		--toc-bg:       rgba(42,31,18,0.04);
	}

	html[data-theme="dark"] {
		--ink:          #e8dcc8;
		--ink-light:    #b8a88e;
		--ink-faint:    #8a7d6b;
		--page:         #1c1510;
		--page-dark:    #151008;
		--shell:        #261e14;
		--shell-shadow: rgba(0,0,0,0.4);
		--accent:       #c8825a;
		--accent-light: #e09a6a;
		--accent-faint: rgba(200,130,90,0.15);
		--border:       rgba(232,220,200,0.1);
		--border-strong: rgba(232,220,200,0.2);
		--grain-opacity: 0.03;
		--vignette-opacity: 0.5;
		--code-bg:      rgba(232,220,200,0.08);
		--code-text:    #c8825a;
		--toc-bg:       rgba(232,220,200,0.05);
	}

	/* ═══════════════════════════════════════════════════════
	   RESET & BASE
	   ═══════════════════════════════════════════════════════ */
	* {
		box-sizing: border-box;
	}

	html {
		font-family: 'IM Fell DW Pica', 'Georgia', serif;
		background: var(--page);
		color: var(--ink);
		line-height: 1.7;
		-webkit-font-smoothing: antialiased;
		-moz-osx-font-smoothing: grayscale;
		text-rendering: optimizeLegibility;
		font-feature-settings: "kern" 1, "liga" 1, "calt" 1;
		font-variant-ligatures: common-ligatures contextual;
		scroll-behavior: smooth;
		transition: background 0.4s ease, color 0.4s ease;
	}

	body {
		margin: 0;
		line-height: 1.7;
		color: var(--ink);
		font-size: 16px;
		word-spacing: 0.05em;
		position: relative;
		min-height: 100vh;
	}

	/* Grain texture overlay */
	body::before {
		content: '';
		position: fixed;
		inset: 0;
		background-image: url("data:image/svg+xml,%3Csvg viewBox='0 0 256 256' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='noise'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='0.9' numOctaves='4' stitchTiles='stitch'/%3E%3C/filter%3E%3Crect width='100%25' height='100%25' filter='url(%23noise)'/%3E%3C/svg%3E");
		opacity: var(--grain-opacity);
		pointer-events: none;
		z-index: 9999;
	}

	/* Vignette effect */
	body::after {
		content: '';
		position: fixed;
		inset: 0;
		background: radial-gradient(ellipse at center, transparent 50%, rgba(0,0,0,var(--vignette-opacity)) 150%);
		pointer-events: none;
		z-index: 9998;
	}

	/* ═══════════════════════════════════════════════════════
	   TYPOGRAPHY
	   ═══════════════════════════════════════════════════════ */
	h1, h2, h3, h4, h5, h6 {
		font-family: 'Cormorant SC', 'Cormorant Garamond', serif;
		font-weight: 600;
		line-height: 1.3;
		color: var(--ink);
		margin-top: 0;
		letter-spacing: 0.02em;
		text-rendering: optimizeLegibility;
		font-feature-settings: "kern" 1, "liga" 1;
	}

	h1 {
		font-size: 2.5rem;
		margin-bottom: 1.5rem;
	}

	h2 {
		font-size: 2rem;
		margin-bottom: 1.25rem;
	}

	h3 {
		font-size: 1.5rem;
		margin-bottom: 1rem;
	}

	p {
		line-height: 1.8;
		margin-bottom: 1.5rem;
		color: var(--ink);
	}

	a {
		color: var(--accent);
		transition: color 0.2s ease;
	}

	a:hover {
		color: var(--accent-light);
	}

	code {
		font-family:
			Menlo,
			Monaco,
			Lucida Console,
			Liberation Mono,
			DejaVu Sans Mono,
			Bitstream Vera Sans Mono,
			Courier New,
			monospace;
		background: var(--code-bg);
		color: var(--code-text);
		padding: 0.2rem 0.4rem;
		border-radius: 0.25rem;
		font-size: 0.9em;
	}

	/* ═══════════════════════════════════════════════════════
	   ANIMATIONS
	   ═══════════════════════════════════════════════════════ */
	@keyframes fadeUp {
		from {
			opacity: 0;
			transform: translateY(12px);
		}
		to {
			opacity: 1;
			transform: translateY(0);
		}
	}

	.fade-up {
		animation: fadeUp 0.6s ease-out both;
	}
</style>
