---
export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Hologram Thoughts - A spiritual journey exploring Buddhism, meditation, consciousness, and the interconnected nature of reality. Because ideas last forever." />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<link rel="alternate" type="application/rss+xml" title="Hologram Thoughts" href="/rss.xml" />
		<title>{title}</title>

		<!-- Open Graph -->
		<meta property="og:type" content="website" />
		<meta property="og:title" content={title} />
		<meta property="og:description" content="A spiritual journey exploring Buddhism, meditation, consciousness, and the interconnected nature of reality. Because ideas last forever." />
		<meta property="og:image" content="https://hologramthoughts.com/og-image.png" />
		<meta property="og:url" content={Astro.url.href} />
		<meta property="og:site_name" content="Hologram Thoughts" />

		<!-- Twitter Card -->
		<meta name="twitter:card" content="summary_large_image" />
		<meta name="twitter:title" content={title} />
		<meta name="twitter:description" content="A spiritual journey exploring Buddhism, meditation, consciousness, and the interconnected nature of reality." />
		<meta name="twitter:image" content="https://hologramthoughts.com/og-image.png" />
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&family=Crimson+Text:ital,wght@0,400;0,600;1,400&display=swap" rel="stylesheet">
	</head>
	<body>
		<slot />
	</body>
</html>

<style is:global>
	* {
		box-sizing: border-box;
	}

	html {
		font-family: 'Inter', system-ui, sans-serif;
		background: #fafaf8;
		line-height: 1.7;
		-webkit-font-smoothing: antialiased;
		-moz-osx-font-smoothing: grayscale;
		text-rendering: optimizeLegibility;
		font-feature-settings: "kern" 1, "liga" 1, "calt" 1;
		font-variant-ligatures: common-ligatures contextual;
		scroll-behavior: smooth;
	}

	body {
		margin: 0;
		line-height: 1.7;
		color: #44403c;
		font-size: 16px;
		word-spacing: 0.05em;
	}

	h1, h2, h3, h4, h5, h6 {
		font-family: 'Crimson Text', serif;
		font-weight: 600;
		line-height: 1.3;
		color: #1c1917;
		margin-top: 0;
		letter-spacing: -0.02em;
		text-rendering: optimizeLegibility;
		font-feature-settings: "kern" 1, "liga" 1;
	}

	h1 {
		font-size: 2.5rem;
		margin-bottom: 1.5rem;
	}

	h2 {
		font-size: 2rem;
		margin-bottom: 1.25rem;
	}

	h3 {
		font-size: 1.5rem;
		margin-bottom: 1rem;
	}

	p {
		line-height: 1.8;
		margin-bottom: 1.5rem;
		color: #44403c;
	}

	a {
		color: #8b7355;
		transition: color 0.2s ease;
	}

	a:hover {
		color: #6d5a3f;
	}

	code {
		font-family:
			Menlo,
			Monaco,
			Lucida Console,
			Liberation Mono,
			DejaVu Sans Mono,
			Bitstream Vera Sans Mono,
			Courier New,
			monospace;
	}
</style>
