---
import Layout from './Layout.astro';
import SiteHeader from '../components/SiteHeader.astro';
import SiteFooter from '../components/SiteFooter.astro';

const { frontmatter } = Astro.props;
---

<Layout title={`${frontmatter.title} - Hologram Thoughts`}>
  <main>
    <SiteHeader activePage="home" />
    
    <article class="post">
      <header class="post-header">
        <h1>{frontmatter.title}</h1>
        <div class="post-meta">
          <time datetime={frontmatter.pubDate?.toISOString()}>
            {frontmatter.pubDate?.toLocaleDateString('en-US', {
              year: 'numeric',
              month: 'long', 
              day: 'numeric'
            })}
          </time>
          {frontmatter.categories && (
            <div class="categories">
              {frontmatter.categories.map((category) => (
                <span class="category">{category}</span>
              ))}
            </div>
          )}
        </div>
      </header>

      <div class="post-content">
        <slot />
      </div>
    </article>
  </main>
  
  <SiteFooter />
</Layout>

<style>
  main {
    max-width: 800px;
    margin: 0 auto;
    padding: 2rem 1rem;
  }

  .post {
    background: white;
    border-radius: 1rem;
    overflow: hidden;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.05);
  }

  .post-header {
    padding: 3rem 3rem 2rem;
    border-bottom: 1px solid #f1f5f9;
  }

  .post-header h1 {
    font-family: 'Crimson Text', serif;
    font-size: 3rem;
    line-height: 1.2;
    color: #1a202c;
    margin: 0 0 2rem 0;
    font-weight: 600;
    letter-spacing: -0.02em;
  }

  .post-meta {
    display: flex;
    flex-wrap: wrap;
    gap: 1.5rem;
    align-items: center;
    color: #666;
  }

  .post-meta time {
    font-size: 1.1rem;
    font-weight: 500;
  }

  .categories {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .category {
    background: #f7fafc;
    color: #4a5568;
    padding: 0.4rem 0.8rem;
    border-radius: 0.5rem;
    font-size: 0.85rem;
    border: 1px solid #e2e8f0;
  }

  .post-content {
    padding: 2rem 3rem 3rem;
    font-size: 1.125rem;
    line-height: 1.8;
    color: #4a5568;
  }

  .post-content :global(h1),
  .post-content :global(h2),
  .post-content :global(h3),
  .post-content :global(h4),
  .post-content :global(h5),
  .post-content :global(h6) {
    font-family: 'Crimson Text', serif;
    color: #1a202c;
    font-weight: 600;
    letter-spacing: -0.02em;
    margin-top: 2.5rem;
    margin-bottom: 1.5rem;
    line-height: 1.3;
  }

  .post-content :global(h1) { font-size: 2.5rem; }
  .post-content :global(h2) { font-size: 2rem; }
  .post-content :global(h3) { font-size: 1.5rem; }
  .post-content :global(h4) { font-size: 1.25rem; }

  .post-content :global(p) {
    margin-bottom: 1.75rem;
    line-height: 1.8;
  }

  .post-content :global(blockquote) {
    border-left: 4px solid #667eea;
    padding-left: 1.5rem;
    margin: 2rem 0;
    font-style: italic;
    color: #2d3748;
    font-size: 1.1rem;
  }

  .post-content :global(em) {
    font-style: italic;
    color: #2d3748;
  }

  .post-content :global(strong) {
    font-weight: 600;
    color: #1a202c;
  }

  .post-content :global(code) {
    background: #f7fafc;
    padding: 0.2rem 0.4rem;
    border-radius: 0.25rem;
    font-size: 0.9em;
    color: #d53f8c;
  }

  @media (max-width: 768px) {
    main {
      padding: 1rem;
    }

    .post-header {
      padding: 2rem 1.5rem 1.5rem;
    }

    .post-header h1 {
      font-size: 2rem;
    }

    .post-content {
      padding: 1.5rem;
    }

    .post-meta {
      flex-direction: column;
      align-items: flex-start;
      gap: 1rem;
    }
  }
</style>
